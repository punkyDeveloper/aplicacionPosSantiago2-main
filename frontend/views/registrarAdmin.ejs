<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrar admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
   
    <!--data table-->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
</head>
<body>
  <%- include('parciales/navAdmin')%>
    <form action="registrarAdmin" method="POST" class="m-5">
        
          <div class="form-row col-md-6">
          <div class="form-group col-md-6">
            <label for="idAdmin">Cedula</label>
            <input type="number" class="form-control" id="idAdmin" name="idAdmin" placeholder="Cedula">
          </div>
          <div class="form-group col-md-6">
            <label for="nombre">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombreAdmin" placeholder="Nombre">
          </div>
          </div>
          <div class="form-row col-md-6">
            <div class="form-group col-md-6">
            <label for="apellido">Apellido</label>
            <input type="text" class="form-control" id="apellido" name="apellidoAdmin" placeholder="Apellido">
          </div>
          <div class="form-group col-md-6">
            <label for="Contraceña">Contraceña</label>
            <input type="password" class="form-control" id="Contraceña" name="ContraceñaAdmin" placeholder="Contraceña">
          </div>
        </div>
      
      <div class="form-row col-md-6"> 
        
        <div class="form-group col-md-6">
          <label for="correo">Correo</label>
          <input type="email" class="form-control" id="correo" name="correoAdmin" placeholder="correo">
        </div>
        </div>

            <input type="submit" class="btn btn-dark" value="Registrar">
        
      </form>

  
<h2 class="h2">Datos adminstrador</h2>
	<table class="table" id="adminTabla">
		<thead class="thead-dark">
		  <tr>
            <th scope="col">Id</th>
			<th scope="col">Correo</th>
			<th scope="col">Nombre</th>
			<th scope="col">Apellido</th>
			<th scope="col">Contraseña</th>
			<th scope="col">Editar</th>
            <th scope="col">Eliminar</th>

		  </tr>
		</thead>



		<tbody>
           <% adminstrador.forEach(function(administradores) { %>
		  <tr>
			<th scope="row"><%=administradores._id%></th>
            <td><%= administradores.correo %></td>
			<td><%= administradores.nombre %></td>
			<td><%= administradores.apellido %></td>
			<td><%= administradores.contraseña %></td>
            <td><button data-toggle="modal" data-target="#editar" class="btn btn-dark"
                onclick="actualizarAdministrador('<%= administradores._id %>','<%= administradores.correo%>','<%= administradores.nombre %>',
                '<%= administradores.apellido %>','<%= administradores.contraseña %>')" >editar</button></td>
            <td><button data-toggle="modal" data-target="#eliminar" class="btn btn-danger"
                onclick="elimanrAdministrador('<%= administradores._id %>')" >eliminar</button></td>
		  </tr>
		  
          <% }) %>
		</tbody>
	  </table>
      <div class="" id="paginador"></div>
	


<!-- modal de editar -->
<div class="modal" id="editar">
    <div class="modal-dialog">
      <div class="modal-content">
  
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">actualizar</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
  
        <!-- Modal body -->
        <div class="modal-body">
            <form id="editarA" method="POST">
                <div>
                  <label for="id" class="form-label">cedula</label>
                  <input type="text" class="form-control" id="_id" name="id" disabled>
                </div>
                <div class="mb-3">
                  <label for="cVendedor" class="form-label">correo</label>
                  <input type="email" class="form-control" id="cAdmin" name="cAdmin">
                </div>
                <div class="mb-3">
                  <label for="nAdmin" class="form-label">nombre</label>
                  <input type="text" class="form-control" id="nAdmin" name="nAdmin">
                </div>
                <div class="mb-3">
                  <label for="aAdmin" class="form-label">apellido</label>
                  <input type="text" class="form-control" id="aAdmin" name="aAdmin">
                </div>
                <div class="mb-3">
                    <label for="contraseñaA" class="form-label">contraseña</label>
                    <input type="password" class="form-control" id="contraseñaA" name="contraseñaA">
                  </div>
                <button type="submit" class="btn btn-dark p-1 mt-5">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-vector-pen" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M10.646.646a.5.5 0 0 1 .708 0l4 4a.5.5 0 0 1 0 .708l-1.902 1.902-.829 3.313a1.5 1.5 0 0 1-1.024 1.073L1.254 14.746 4.358 4.4A1.5 1.5 0 0 1 5.43 3.377l3.313-.828L10.646.646zm-1.8 2.908-3.173.793a.5.5 0 0 0-.358.342l-2.57 8.565 8.567-2.57a.5.5 0 0 0 .34-.357l.794-3.174-3.6-3.6z"/>
                    <path fill-rule="evenodd" d="M2.832 13.228 8 9a1 1 0 1 0-1-1l-4.228 5.168-.026.086.086-.026z"/>
                  </svg> actualizar
                </button>
              </form>
        </div>
  
        <!-- Modal footer -->

  
      </div>
    </div>
  </div>



  <!-- modal eliminar -->
<div class="modal" id="eliminar">
    <div class="modal-dialog">
      <div class="modal-content">
  
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">eliminar</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
  
        <!-- Modal body -->
        <div class="modal-body">
            <form id="elimiminarA" method="POST">
             
                <h1>esta seguro</h1>
  
                <button type="submit" class="btn btn-dark p-1 mt-5">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                  </svg>
                eliminar
                </button>
              </form>
        </div>
  
        
  
      </div>
    </div>
  </div>


		<!--jquery-->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
	    <!--datatable-->
      <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.js"></script>
 	<script>
        function actualizarAdministrador(id,correo,nombre,apellido,contraseña){

           _id.value = id;
            cAdmin.value = correo;
            nAdmin.value = nombre;
            aAdmin.value=apellido;
            contraseñaA.value=contraseña;

            var form = editarA;
             form.setAttribute('action', `/admin/editarAdmin/${id}`);
        }

//eliminar
        function elimanrAdministrador(id){

            var form = elimiminarA;
            form.setAttribute('action',`/admin/administrador/${id}`);
        }
    
//datatable
new DataTable('#adminTabla', {
        order: [[3, 'desc']]
      });

    </script>

<!--boostrap-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

</body>
</html>