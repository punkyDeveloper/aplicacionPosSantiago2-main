    <!DOCTYPE html>
    <html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>prodcutos</title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body>
        
      
      <% if (rol === null || rol === undefined) { %>
        <%- include('parciales/nav') %>
        <% } else if (rol ==='rolCliente') { %>
          <%- include('parciales/navUsuarios') %>
      <% } %>




        <h1 class="h1">Productos</h1>

            <div class="row row-cols-1 row-cols-md-4 g-3 p-3">
                <% productos.forEach(function(productos) { %>
                    <div class="col">
                        <div class="card shadow-sm">
                            <img class="bd-placeholder-img card-img-top" width="50%" height="225" id="img" src="https://source.unsplash.com/600x700/?/<%=productos.nombre%>" alt="Card image cap">

                            <div class="card-body">
                                <h3 class="h3"><%= productos.nombre%></h3>
                                
                                    
                                <p class="card-text"> <strong>$: <%= productos.precio%> </strong> </p>
                                
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group ">
                                        <button class="btn btn-dark m-1"  onclick="agregarCarro(`<%=productos.nombre%>`,`<%=productos.precio%>`,`<%=productos.id%>`,`<%= productos.stock%>`)" >Agregar al carro</button>
                                        <div class="btn-group ">
                                        <button type="button" class="btn btn-dark m-1" data-bs-toggle="modal" data-bs-target="#myModal" onclick="inprimir(`<%=productos.nombre%>`,`<%=productos.precio%>`,`<%=productos._id%>`,`<%= productos.descripcion%>`)">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                                <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                                                <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
                                              </svg>
                                        </button>
                                    </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


                    <%})%>
              </div>
              <!-- PaginaciÃ³n -->
<div class="d-flex justify-content-center mt-4">
  <nav aria-label="Page navigation example">
      <ul class="pagination">

          <% if (currentPage > 1) { %>
              <li class="page-item">
                  <a class="page-link" href="?page=<%= currentPage - 1 %>" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                  </a>
              </li>
          <% } %>

          <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                  <a class="page-link" href="?page=<%= i %>"><%= i %></a>
              </li>
          <% } %>

          <% if (currentPage < totalPages) { %>
              <li class="page-item">
                  <a class="page-link" href="?page=<%= currentPage + 1 %>" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                  </a>
              </li>
          <% } %>

      </ul>
  </nav>
</div>

              <!--modal-->
              <div class="modal" id="myModal">
                <div class="modal-dialog">
                  <div class="modal-content">
              
                    <!-- Modal Header -->
                    <div class="modal-header">
                      <h4 class="modal-title" id="modalTitle">Modal Heading</h4>
                      <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
              
                    <!-- Modal body -->
                    <div class="modal-body">
                        
                        <div class="card mb-3" style="max-width: 540px;">
                            <div class="row g-0">
                              <div class="col-md-4">
                                <img src="https://source.unsplash.com/600x700/?/" class="img-fluid rounded-start" alt="..." id="img" class="img">
                              </div>
                              
                              <div class="col-md-8">
                                <div class="card-body">
                                    <div class="card-body">
                                        <h5 class="card-title" id="nProdusto" class="nProdusto"></h5>
                                        <p class="card-text" class="pproducto" id="pproducto"></p>
                                        <p class="card-text"><small class="text-body-secondary" id="dProductos"></small></p>
                                      </div>
                                    </div>
                              </div>
                            </div>
                          </div>
                        
                    </div>
              

              
                  </div>
                </div>
              </div>
              <%- include('parciales/footer')%>
              <script>
                function inprimir(nombre,precio,id,descripcion){
                    modalTitle.innerText = "Detalles del producto";
                    nProdusto.innerText = nombre;
                    pproducto.innerText = "Precio: " + precio 
                    dProductos.innerText = descripcion
                  }
 
                
                
              </script>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    </body>
    </html>